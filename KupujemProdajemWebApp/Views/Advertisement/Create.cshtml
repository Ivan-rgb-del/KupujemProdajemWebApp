@using KupujemProdajemWebApp.Data.Enum
@model Advertisement
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<form>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Title">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" placeholder="Price">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input">
        <label class="form-check-label" asp-for="IsFixedPrice">Is Price Fixed?</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input">
        <label class="form-check-label" asp-for="IsReplacement">Is Product for Replacement?</label>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
    </div>
    <div class="form-group">
        <label asp-for="ImageURL">Image</label>
        <input asp-for="ImageURL" class="form-control" placeholder="Place Image">
    </div>
    <div class="form-group">
        <label asp-for="CreatedOn">Created On</label>
        <input asp-for="CreatedOn" class="form-control" placeholder="CreatedOn">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input">
        <label class="form-check-label" asp-for="IsActive">Is Advertisement Active?</label>
    </div>
    <div class="form-group">
        <label asp-for="AdvertisementCondition">Advertisement Condition</label>
        <select asp-for="AdvertisementCondition" asp-items="@Html.GetEnumSelectList<AdvertisementCondition>()">
            <option>Select</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryType">Delivery type</label>
        <select asp-for="DeliveryType" asp-items="@Html.GetEnumSelectList<DeliveryType>()">
            <option>Select</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Address.City">City</label>
        <input asp-for="Address.City" class="form-control" placeholder="City">
    </div>
    <div class="form-group">
        <label asp-for="Address.Street">Street</label>
        <input asp-for="Address.Street" class="form-control" placeholder="Street">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>