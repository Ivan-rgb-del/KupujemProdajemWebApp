@model IEnumerable<Advertisement>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <form class="d-flex" asp-controller="Advertisement" asp-action="FilterByCity">
                <div class="input-group mb-3">
                    <input name="city" type="search" class="form-control" aria-label="Default" placeholder="Search">
                    <button class="btn btn-dark" type="submit">Search by city</button>
                </div>
            </form>
            @foreach(var ad in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@ad.ImageURL" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@ad.Title</p>
                            <p class="card-text">@ad.Price</p>
                            <p class="card-text">@ad.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Advertisement" asp-action="Detail" asp-route-id="@ad.Id" class="btn btn-sm btn-outline-secondary">View</a>

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <form method="post" asp-controller="Favorite" asp-action="SaveToFavorites">
                                            <input type="hidden" name="adId" value="@ad.Id" />
                                            <button type="submit" class="btn btn-primary">Add To Favorites</button>
                                        </form>
                                    }
                                </div>
                                <small class="text-muted">Likes: @ad.Likes</small>
                                <small class="text-muted">Viewers: @ad.Viewers</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>